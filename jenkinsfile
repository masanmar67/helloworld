pipeline {
    agent none

    stages {
        stage('Get Code') {
            agent {label 'nodo1'}
            steps {
                // Obtener el código del repositorio en github
                bat 'hostname'
                bat 'whoami'
                echo 'Obteniendo el código de repositorio'
                git 'https://github.com/masanmar67/helloworld.git'
                bat 'dir'
                echo WORKSPACE
                stash includes: '**', name: 'Files'
            }
        }
        stage('Build') {
            agent {label 'nodo1'}
            steps {
                echo 'Esta es la etapa de compilación, si hace falta'
            }
        }
        
        stage('Tests'){
            parallel{
                stage('Unit') {
                    agent {label 'nodo2'}
                    steps {
                        bat 'hostname'
                        bat 'whoami'
                        echo WORKSPACE
                        unstash 'Files'
                        bat '''
                            set PYTHONPATH=%WORKSPACE%
                            pytest --junitxml=result-unit.xml test\\unit
                        '''
                    }
                }
                stage('RestService'){
                    agent {label 'nodo2'}
                    steps {
                        bat 'hostname'
                        bat 'whoami'
                        echo WORKSPACE
                        unstash 'Files'
                        bat '''
                            set FLASK_APP=app\\api.py
                            set FLASK_ENV=development
                            start /B flask run > flask.log 2>&1
                            start /B java -jar C:\\proyectos\\diplodevops\\wiremock\\wiremock-standalone-3.13.0.jar --port 9090 --verbose --root-dir C:\\proyectos\\diplodevops\\wiremock > wiremock.log 2>&1

                            REM Espera a que el servicio esté disponible (Puerto 5000)
                            powershell -Command "& { for ($i=0; $i -lt 10; $i++) { if (Test-NetConnection -ComputerName 'localhost' -Port 5000).TcpTestSucceeded { exit 0 }; Start-Sleep -Seconds 2 }; exit 1 }"

                            set PYTHONPATH=%WORKSPACE%
                            pytest --junitxml=result-rest.xml test\\rest
                        '''
                    }
                }
            }
        }
        stage('Results'){
            agent {label 'nodo2'}
            steps {
                junit '*.xml'
            }
        }
    }
}
